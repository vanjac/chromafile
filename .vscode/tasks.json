{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build resources",
			"command": "rc.exe",
			"args": [
				"/D", "_UNICODE",
				"/D", "UNICODE",
				"/fo",
				"${workspaceFolder}\\build\\resource.res",
				"${workspaceFolder}\\src\\resource.rc",
			],
			"group": {
				"kind": "build",
			},
		},
		{
			"label": "Compile message script",
			"command": "mc.exe",
			"args": [
				"-h", "${workspaceFolder}\\build",
				"-r", "${workspaceFolder}\\build",
				"-n",
				"${workspaceFolder}\\src\\message.mc",
			],
			"group": {
				"kind": "build",
			},
		},
		{
			"label": "Compile message resource",
			"dependsOn": ["Compile message script"],
			"command": "rc.exe",
			"args": [
				"/fo",
				"${workspaceFolder}\\build\\message.res",
				"${workspaceFolder}\\build\\message.rc",
			],
			"group": {
				"kind": "build",
			},
		},
		{
			"type": "cppbuild",
			"label": "Debug build",
			"dependsOn": ["Build resources", "Compile message resource"],
			"command": "cl.exe",
			"args": [
				"/Zi",      // debug only
				"/EHsc",    // debug only
				"/MTd",     // debug only
				"/D", "CHROMAFILER_DEBUG", // debug only
				// "/D", "CHROMAFILER_MEMLEAKS", // debug only
				"/nologo",
				"/MP", // https://randomascii.wordpress.com/2014/03/22/make-vc-compiles-fast-through-parallel-compilation/
				"/W4",
				"/Fe:", "${workspaceFolder}\\build\\ChromaFiler.exe",
				"/I", "${workspaceFolder}\\src",
				"/I", "${workspaceFolder}\\build",	// for message.h
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\build\\resource.res",
				"${workspaceFolder}\\build\\message.res",
				"/link",
				"/incremental:no",
				"/manifest:no",
				"/subsystem:console",   // debug only
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type": "cppbuild",
			"label": "Release build",
			"dependsOn": ["Build resources", "Compile message resource"],
			"command": "cl.exe",
			"args": [
				"/GL",      // release only
				"/O2",      // release only
				"/D", "_HAS_EXCEPTIONS=0", // release only
				"/nologo",
				"/MP",
				"/W4",
				"/Fe:", "${workspaceFolder}\\build\\ChromaFiler.exe",
				"/I", "${workspaceFolder}\\src",
				"/I", "${workspaceFolder}\\build",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\build\\resource.res",
				"${workspaceFolder}\\build\\message.res",
				"/link",
				"/incremental:no",
				"/manifest:no",
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
			},
		}
	]
}